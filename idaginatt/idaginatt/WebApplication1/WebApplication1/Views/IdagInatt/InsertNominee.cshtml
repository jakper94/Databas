@model WebApplication1.Models.NomineeDetail

@{
    ViewData["Title"] = "InsertNominee";
}

<h2>InsertNominee</h2>

<h4>NomineeDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="InsertNominee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nominee_FirstName" class="control-label"></label>
                <input asp-for="Nominee_FirstName" class="form-control" />
                <span asp-validation-for="Nominee_FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nominee_LastName" class="control-label"></label>
                <input asp-for="Nominee_LastName" class="form-control" />
                <span asp-validation-for="Nominee_LastName" class="text-danger"></span>
            </div>
            
            @using (Html.BeginForm("Index",
                                   "Home",
                                   FormMethod.Post,
                                   new { enctype = "multipart/form-data" }))
            {
                <label for="file">Upload Image:</label>
                <input type="file" name="file" id="file" /><br><br>
                <input type="submit" value="Upload Image" />
                <br><br>
                @ViewBag.Message
            }
            <div class="form-group">
                <label asp-for="Nominee_ImgLink" class="control-label"></label>
                <input asp-for="Nominee_ImgLink" class="form-control" />
                <span asp-validation-for="Nominee_ImgLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nominee_Year" class="control-label"></label>
                <input asp-for="Nominee_Year" class="form-control" />
                <span asp-validation-for="Nominee_Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="NomineeList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
